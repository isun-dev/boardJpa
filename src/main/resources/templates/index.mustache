{{>layout/header}}

<h1>서울에서 살아남기</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>공고번호</th>
            <th>유형</th>
            <th>공고명</th>
            <th>지역</th>
            <th>작성자</th>
            <th>게시일</th>
            <th>마감일</th>
            <th>상태</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td>미정</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>미정</td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
                <td>{{modifiedDate}}</td>
                <td>공고중</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}